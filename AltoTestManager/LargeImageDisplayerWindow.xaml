        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LargeImageDisplayerWindow" WindowStyle="ToolWindow"  ResizeMode="CanMinimize" 
    WindowStartupLocation="CenterScreen"  Height="300" Width="300" WindowState="Maximized">
